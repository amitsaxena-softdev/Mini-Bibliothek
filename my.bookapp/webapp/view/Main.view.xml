<mvc:View
	controllerName="my.bookapp.controller.Main"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	core:require="{
		formatter: 'my/bookapp/model/formatter'
	}">

	<Page id="page">
		<customHeader>
			<Bar>
			
				<contentMiddle>
				<Button text="ðŸ“š Neues Buch" press="onAddBook" class="sapUiSmallMarginBottom" />
				<HBox justifyContent="Center" width="100%">
					<Text
					text="{i18n>appTitle}"
					class="largeTitle" />
				</HBox>
				</contentMiddle>
			</Bar>
		</customHeader>
		
		<content>
  			<List items="{/books}" class="centeredList">
				<CustomListItem>
					<HBox justifyContent="SpaceBetween" width="100%">
					<VBox>
						<Text text="{title}" class="sapUiSmallMarginBottom" />
						<Text text="{author}" />
						<Text text="von {created_by}" />
						<Text text="{ path: 'created_at', formatter: 'formatter.formatDate' }" />
					</VBox>
					<VBox>
						<Button icon="sap-icon://edit" press=".onEditBook" type="Emphasized" />
						<Button icon="sap-icon://delete" press=".onDeleteBook" type="Negative" tooltip="Buch lÃ¶schen" />
					</VBox>
					
					</HBox>
				</CustomListItem>
			</List>	
		</content>
	</Page>
</mvc:View>
